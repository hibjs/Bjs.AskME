
@{
    ViewData["Title"] = "注册";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles{
    <environment include="Development">
        <link href="~/css/signup.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <link href="~/css/signup.min.css" rel="stylesheet" asp-append-version="true" />
    </environment>
}


<div>
    <main class="container main">
        <div class="sm-12 subheader">
            <div class="tabs" style="float:left">
                <a asp-route="Login">登陆</a>
                <a asp-route="SignUp" class="youarehere">注册</a>
            </div>
        </div>
        <div id="login-page">
            <div id="formContainer">
                <form id="login-form">
                    <div class="form-group">
                        <label for="display-name">用户名</label>
                        <input name="username" id="username" type="text" placeholder="Jack.H" class="form-input" />
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input name="email" id="email" type="email" placeholder="you@example.org" class="form-input" />
                    </div>
                    <div class="form-group">
                        <label for="password">密码</label>
                        <input name="pwssword" id="password" type="password" placeholder="******" class="form-input" />
                    </div>
                    <div class="form-group">
                        <a href="#" class="forget-link">注册遇到问题？</a>
                        <button type="button" class="fr" id="regiter-btn">注册</button>
                    </div>
                    <p class="text-center clear agree">
                        点击注册按钮，表明您同意
                        <a href="#">《隐私条款》</a>
                    </p>
                </form>
            </div>
            <div class="switch">
                已拥有账户，
                <a href="/users/login" title="注册">马上登陆</a>
            </div>
        </div>
    </main>
</div>

@section Scripts{
    <environment include="Development">
        <script src="~/js/register.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/register.min.js"></script>
    </environment>
}

